<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.awareframework.android.sensor.rotation">

    <application>
        <service
            android:name=".RotationSensor"
            android:exported="true" />

        <receiver android:name=".RotationSensor$RotationSensorBroadcastReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.aware.android.sensor.rotation.SENSOR_START" />
                <action android:name="com.aware.android.sensor.rotation.SENSOR_STOP" />
                <action android:name="com.aware.android.sensor.SENSOR_START" />
                <action android:name="com.aware.android.sensor.SENSOR_STOP" />
            </intent-filter>
        </receiver>
    </application>
</manifest>
